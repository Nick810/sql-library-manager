extends layout.pug

block content
  p
    a(class='button table-button' href='/books/new') Create New Book
  table.table-container
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href='/books/' + book.dataValues.id)= book.dataValues.title
          td= book.dataValues.author
          td= book.dataValues.genre
          td= book.dataValues.year
          
  - let index = 1;
  div.pagination-container
    while index < totalPage + 1
        a(href='/books/page/' + index).pagination-links= index++
